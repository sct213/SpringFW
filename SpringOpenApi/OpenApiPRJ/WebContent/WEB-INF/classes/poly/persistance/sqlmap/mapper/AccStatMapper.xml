<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- JAVA와 연결할 Mapper 파일 설정 -->
<mapper namespace="poly.persistance.mapper.IAccStatMapper">

	<!-- 게시판 리스트 쿼리 -->
	<select id="getAccStatInfo" resultType="AccStatDTO" parameterType="AccStatDTO">
		SELECT 
			YYYYMM,
			A_CODE,
			A_NAME,
			STAT_A,
			STAT_B,
			REG_ID,
			REG_DT,
			CHG_ID,
			CHG_DT
		FROM ACCIDENT_STAT
		WHERE 1=1
		
		<!-- AccStatDTO의 yyyymm 변수의 값이 존재한다면
			일반적으로 아무 값이나 있는 경우에 대해 조건문을 작성하면,
			반드시 NULL체크과 ''인지를 확인하는 구분이 필요하다.
			
			그러나 myBatis에서 NULL 체크 로직없이, (!='' => '' 값이 아니라면)만
			작성한 이유는 Controller에서 전송받는 파라미터인 yyyymm 변수에 CmmUtil.nvl 함수를 통해
			NULL 값을 강제로 '' 변경하였기 때문이다.
			
			따라서 !='' 만 작성한다 
		 -->
		 <if test='yyyymm != ""'>
		 	<![CDATA[
		 	AND YYYYMM = #{yyyymm}
		 	]]>
		 </if>
		 
		 <!-- AccStatDTO의 a_code 변수의 값ㅇ디 존재한다면 -->
		 <if test='a_code != ""'>
		 	<![CDATA[
		 	AND YYYYMM = #{A_CODE}
		 	]]>
		 </if>
	</select>
</mapper>